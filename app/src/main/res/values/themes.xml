<resources>
    <!-- Base application theme. -->
    <style name="Theme.AndroidFundamentals2020" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AndroidFundamentals2020.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidFundamentals2020.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.AndroidFundamentals2020.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Theme for splash screen  -->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_bg</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Dialog.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <!--    <style name="Theme.Dialog.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">-->
        <!-- Calendar Header background -->
        <item name="colorAccent">@color/dark_orange</item>
        <!-- Year-->
        <item name="android:textColorSecondaryInverse">@color/peach</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@color/white</item>

        <!-- Calender Day Number & Month Arrows color (< >) -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Week Text Color-->
        <item name="android:textColorSecondary">@color/gray</item>
        <!-- Arrow border color(< >) -->
        <item name="android:selectableItemBackgroundBorderless">@color/dark_blue</item>

        <!-- Selected Item color-->
        <item name="colorControlActivated">@color/dark_green</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/venetian_red</item>

        <!--Calender Background color -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Ok Cancel Color-->
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/orange</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

</resources>